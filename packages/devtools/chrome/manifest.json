{
  "manifest_version": 2,
  "name": "Effection Developer Tools",
  "description": "Adds Effection inspection tools to the Chrome Developer Tools.",
  "version": "2.0.0",
  "version_name": "2.0.0",

  "minimum_chrome_version": "60",

  "background": {
    "scripts": ["dist/background.js"],
    "persistent": false
  },

  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["dist/content-script.js"],
    "run_at": "document_end",
    "all_frames": true
  }],

  "devtools_page": "devtools.html",

  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "web_accessible_resources": [
    "icons/*"
  ],

  "permissions": ["file:///*", "http://*/*", "https://*/*"]
}
